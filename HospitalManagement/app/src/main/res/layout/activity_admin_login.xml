<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin's Login"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter UserName"
            android:textSize="15sp"
            android:layout_marginLeft="4dp"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_bright"
            android:id="@+id/adminUserNameTV"
            android:nextFocusDown="@+id/passwordFieldOfAdmin"
            android:imeOptions="actionNext"
            android:inputType="text"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter password"
            android:textSize="15sp"
            android:layout_marginLeft="4dp"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:password="true"
            android:id="@+id/passwordFieldOfAdmin"
            android:nextFocusDown="@+id/adminPageLoginButton"
            android:imeOptions="actionDone"
            android:inputType="text"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:id="@+id/adminPageLoginButton"
            />

    </LinearLayout>

</RelativeLayout>