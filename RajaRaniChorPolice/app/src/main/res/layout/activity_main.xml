<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/upperback">

    <ImageView
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:elevation="1dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/welcome_to_outwit" />

    <RelativeLayout
        android:layout_marginBottom="70dp"
        android:layout_above="@+id/linearLayout"
        android:id="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/playGameButtonId"
        android:layout_width="133dp"
        android:layout_height="171dp"
        android:background="@drawable/join_game_button"
        android:clickable="true"
        android:layout_marginEnd="20dp"
       />

    <Button
        android:layout_toRightOf="@+id/playGameButtonId"
        android:id="@+id/hostGameButtonId"
        android:layout_width="133dp"
        android:layout_height="171dp"
        android:background="@drawable/host_game_button"
       />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#83BED2"
        android:weightSum="6"
      >

        <TextView
            android:textAllCaps="true"
            android:id="@+id/hiUserTvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="4.75"
            android:textAlignment="center"
            android:textColor="#417B9E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/signOutId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:text="SignOut" />
    </LinearLayout>


</RelativeLayout>
