<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/upperback">

    <ImageView
        android:elevation="1dp"
        android:layout_marginBottom="75dp"
        android:layout_above="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/join_a_room"
        />

    <RelativeLayout
        android:layout_marginBottom="150dp"
        android:layout_above="@+id/nextButtonId"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2"
        android:layout_width="270dp"
        android:layout_height="65dp"
        >
        <EditText
            android:maxLength="5"
            android:cursorVisible="false"
            android:textColor="@color/fui_transparent"
            android:id="@+id/editTextCommon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            />
        <TextView
            android:layout_margin="2dp"
            android:clickable="false"
            android:id="@+id/editText1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#44505f"
            android:textAlignment="center"
            android:textColor="#82c5d9"
            android:textSize="45sp" />

        <TextView
            android:layout_margin="2dp"
            android:layout_toRightOf="@id/editText1"
            android:clickable="false"
            android:id="@+id/editText2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#44505f"
            android:textAlignment="center"
            android:textColor="#82c5d9"
            android:textSize="45sp" />

        <TextView
            android:layout_margin="2dp"
            android:layout_toRightOf="@id/editText2"
            android:clickable="false"
            android:id="@+id/editText3"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#44505f"
            android:textAlignment="center"
            android:textColor="#82c5d9"
            android:textSize="45sp" />


        <TextView
            android:layout_margin="2dp"
            android:layout_toRightOf="@id/editText3"
            android:clickable="false"
            android:id="@+id/editText4"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#44505f"
            android:textAlignment="center"
            android:textColor="#82c5d9"
            android:textSize="45sp" />

        <TextView
            android:layout_margin="2dp"
            android:layout_toRightOf="@id/editText4"
            android:clickable="false"
            android:id="@+id/editText5"
            android:layout_width="50dp"
            android:layout_height="64dp"
            android:background="#44505f"
            android:textAlignment="center"
            android:textColor="#82c5d9"
            android:textSize="45sp" />

    </RelativeLayout>



    <Button
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/nextButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="#82c5d9"
        />
    <android.support.constraint.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
