<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/upperbackblurred"
    tools:context="com.example.lrmah.rajaranichorpolice.gameActivity">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/border"
       android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView">
        <ImageView
            android:id="@+id/arrowL"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/arrowl"/>

    <android.support.v7.widget.RecyclerView
        android:layout_toRightOf="@+id/arrowL"
        android:layout_toLeftOf="@+id/arrowR"
        android:layout_centerVertical="true"
        android:id="@+id/recyclerView1"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layoutAnimation="@anim/layout_animation"/>


        <ImageView
            android:id="@+id/arrowR"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow"/>
    </RelativeLayout>



    <ImageView
        android:layout_below="@+id/relativeLayout2"
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/border"
        />



    <RelativeLayout
        android:layout_above="@+id/linearLayout"
        android:layout_marginTop="8dp"
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
       android:layout_below="@+id/imageView2">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_rectangle"
            android:padding="5dp"
            android:visibility="visible">

        </FrameLayout>

        <TextView
            android:id="@+id/tvWhoseTurn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:layout_margin="10dp"
            android:background="@drawable/rounded_rectangle"
            android:gravity="center"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:text="What's Happening in the game"
            android:textColor="@color/mediumShadeCreamBlue"
            android:textSize="30sp"
            android:visibility="visible" />

    </RelativeLayout>


    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center"
        android:weightSum="5"
        >

        <TextView

            android:layout_margin="5dp"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Your Character:-"
            android:textAllCaps="true"
            android:textColor="@color/darkShadeCreamBlue"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/CharTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Your character"
            android:textAllCaps="true"
            android:textColor="@color/lightShadeCreamBlue"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/bt20"
            android:layout_width="30sp"
            android:layout_height="25sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rect_red"
            android:clickable="true"
            android:src="@drawable/swap" />


    </LinearLayout>







</RelativeLayout>
